  </PropertyGroup>

  <!--<ItemGroup>
    <PackageReference Include="Pcl.NET" Version="0.3.0" />
  </ItemGroup>-->

  <ItemGroup>
    <ProjectReference Include="..\..\src\Pcl.NET\Pcl.NET.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
